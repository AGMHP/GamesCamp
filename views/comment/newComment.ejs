<% include ../partials/header %>
<style>
label{
    color:black;
    font-size:1.4em;
}
.box{
    margin: 7em auto;
}
input:focus,
textarea:focus{
    outline: none;
    box-shadow: none !important;
    border:3px solid;
    border-radius: 10px;
}
.cen{
    text-align: center !important;
    float:center;
}
</style>
<div class="container box">
    <form action="/games/<%=game._id%>/comment" method="POST" class="panel">
        <div class="container bg-light p-3">
            <h1 class="text-center"><%= game.title%> : Review</h1>
            <div class="row p-3">
                <div class="form-group col-md-12">
                    <label for="exampleFormControlInput1"> Author </label>
                    <input type="text" class="form-control" name="comment[author]" value="<%= currentUser.username %>" id="exampleFormControlInput1" disabled>
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleFormControlTextarea">Review</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="comment[review]" rows="6"></textarea>
                </div>
            </div>
            <div class="row justify-content-center">
                <button class="form-group col-8 col-md-3 btn btn-primary btn-lg m-sm-3">Publish</button>
            </div>            
        </div>
    </form>
</div>
<% include ../partials/footer %>