<% include partials/header %>
<style>
.bd-example{
    display: none;
}
.panel{
    margin: 9em auto !important;
    padding: 18px;
    max-width: 30rem;
}
.panel-title{
    color:white;
    text-align: center;
}
</style>
<div class="container">
    <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-md-6 flex-between align-self-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                        <h3 class="panel-title">Sign up</h3>
                            </div>
                            <div class="panel-body">
                        <form role="form" action="/signup" method="POST">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="user[name]" id="first_name" class="form-control input-sm" placeholder="Name">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" name="user[contact][email]" id="email" class="form-control input-sm" placeholder="Email Address">
                            </div>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
                                    </div>
                                </div>
                            </div>
                            
                            <input type="submit" value="Register" class="btn btn-info btn-block">
                        </form>
                    </div>
                </div>
            </div>    
    </div>
</div>
<% include partials/footer %>